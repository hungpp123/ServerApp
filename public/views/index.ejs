<!DOCTYPE>
<html ng-app="myApp">
<head>
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">

  <title>My App</title>
</head>
<body>
  <div style="padding-left:0" class="container" ng-controller="AppCtrl">
    <h1>List users</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Email</th>         
          <th>Name</th>
          <th style="width:100">Password</th>
          <th>PasswordConf</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Action</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><input class="form-control" ng-model="contact.email"></td>
          <td><input class="form-control" ng-model="contact.name"></td>
          <td><input class="form-control" ng-model="contact.passwordConf"></td>
          <td><input class="form-control" ng-model="contact.passwordConf"></td>
          <td><input class="form-control" ng-model="contact.address"></td>
          <td><input class="form-control" ng-model="contact.phone"></td>
          <td><button class="btn btn-primary" ng-click="addContact()">Add Contact</button></td>
          <td><button class="btn btn-info" ng-click="update()">Update</button>&nbsp;&nbsp;<button class="btn btn-info" ng-click="deselect()">Clear</button></td>
        </tr>
        <tr ng-repeat="contact in contactlist">
          <td>{{contact.email}}</td>
          <td>{{contact.name}}</td>
          <td>{{contact.passwordConf}}</td>
          <td>{{contact.passwordConf}}</td>
          <td>{{contact.address}}</td>
          <td>{{contact.phone}}</td>
          <td><button class="btn btn-danger" ng-click="remove(contact._id)">Remove</button></td>
          <td><button class="btn btn-warning" ng-click="edit(contact._id)">Edit</button></td>
        </tr>
      </tbody>
    </table>

  </div>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.12/angular.min.js"></script>
<script src="../controllers/controller.js"></script>
</body>
</html>